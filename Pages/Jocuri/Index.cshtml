@page
@model Sutea_Paul_Vasile_Proiect.Pages.Jocuri.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Jocuri disponibile</h1>


<table class="table";>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Joc[0].Titlu_joc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Joc[0].Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Joc[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Joc[0].DataPublicarii)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Joc) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titlu_joc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPublicarii)
            </td>


            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Modifica</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detalii</a>
                <b>
                    |
                    <a asp-page="./Delete" asp-route-id="@item.ID" ; style="color:red">CUMPARA</a>

                </b>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-page="Create" style="color:#FF2700;font-size:200%;"><b>Vinde un joc</b></a>
</p>